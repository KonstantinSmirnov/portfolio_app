<div class="fh5co-main container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1 class="intro-lead text-center">Login</h1>
      <%= form_tag sessions_path, method: :post do %>
        <div class="form-group">
          <%= label_tag :email %>
          <%= email_field_tag :email, nil, class: 'form-control', required: true %>
        </div>
        <div class="form=group">
          <%= label_tag :password %>
          <%= password_field_tag :password, nil, class: 'form-control', required: true %>
        </div>
        <br>
        <div class="text-center">
          <%= submit_tag 'Login', class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

