<div class="container">
  <div class="row">
    <br>
    <div class="col-md-8 col-md-offset-2">
      <h1 class="intro-lead text-center">Significant projects:</h1>
    </div>
  </div>
</div>

<% @projects.each do |project| %>
  <div class="container">
    <div class="row">
        <div class="col-md-5 col-md-offset-1">
          <%= image_tag project.image.url, class: 'img-fluid img-responsive' %>
        </div>
        <div class="col-md-5">
          <h2><%= project.title %></h2>
          <p><%= project.description %></p>
          <p class="text-center"><a href="<%= project.link %>" class="btn btn-primary">Go to the webpage</a></p>
        </div>
    </div>
  </div>
  <br>
<% end %>
