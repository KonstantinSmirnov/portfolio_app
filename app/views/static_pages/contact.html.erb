<% provide(:title, "Contact") %>

<div class="container">
  <div class="row">
    <br>
    <div class="col-md-4 col-md-offset-1">
      <h1 class="intro-lead text-center">
        Find me here:
      </h1>
      <h1 class="intro-lead text-center">
        <a href="https://www.linkedin.com/in/smirnov-konstantin-9ba95770" target="_blank"><i class="fa fa-linkedin-square"></i></a>
      </h1>
      <p>If you have any purpose to contact me please be free do to it on this page.</p>
    </div>

    <div class="col-md-6">
      <h1 class="intro-lead text-center">Send me a message:</h1>
      <%= form_for @message, url: contact_path do |f| %>
        <% if @message.errors.any? %>
          <ul>
            <% @message.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
          <% end %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control', required: true %>
        </div>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :content, class: 'form-control', required: true %>
        </div>
        <br>
        <div class="text-center">
          <%= f.submit 'Send', class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
