<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel panel-body">
      <%= link_to 'Add Poll', new_admin_poll_path,  class: 'btn btn-default btn-sm' %>
      <table class="table table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>Questions and votes</th>
          <th>Created at</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @polls.each do |poll| %>
          <tr>
            <td><%= poll.title %></td>
            <td>
              <ul>
                <% poll.questions.each do |q| %>
                  <li><%= q.title %> - <%= q.votes %></li>
                <% end %>
              </ul>
            </td>
            <td><%= poll.created_at.strftime("%d/%m/%Y") %></td>
            <td><%= link_to "Edit", edit_admin_poll_path(poll) %>
                <%= link_to "Delete", admin_poll_path(poll), method: :delete, data: { confirm: 'Are you sure>' } %></td>
          </tr>
        <% end %>
      </tbody>
      </table>
      </div>
    </div>
  </div>
</div>
