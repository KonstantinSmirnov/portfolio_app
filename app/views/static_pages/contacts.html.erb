<div class="container">
  <div class="row">
    <br>
    <div class="col-md-4 col-md-offset-1">
      <h1 class="intro-lead text-center">
        Find me here:
      </h1>
      <h1 class="intro-lead text-center">
        <a href="https://www.linkedin.com/in/smirnov-konstantin-9ba95770" target="_blank"><i class="fa fa-linkedin-square"></i></a>
      </h1>
      <p>If you have any purpose to contact me please be free do to it on this page.</p>
    </div>

    <div class="col-md-6">
      <h1 class="intro-lead text-center">Send me a message:</h1>
      <%= form_tag '#', method: :post do %>
        <div class="form-group">
          <%= label_tag :name %>
          <%= text_field_tag :name, nil, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= label_tag :email %>
          <%= email_field_tag :email, nil, class: 'form-control', required: true %>
        </div>
        <div class="form-group">
          <%= label_tag :message %>
          <%= text_area_tag :message, nil, class: 'form-control', required: true %>
        </div>
        <br>
        <div class="text-center">
          <%= submit_tag 'Send', class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
