<div class="col-md-10 col-md-offset-1">
  <%= form_for [:admin, @project], :html => {:multipart => true} do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', required: true %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control', required: true %>
    </div>
    <div class="form-group">
      <%= f.label :link %>
      <%= f.text_field :link, class: 'form-control', required: true %>
    </div>
    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>
    <div class="form-group">
      <% if @project.image.url != '/images/original/missing.png' %>
        <%= image_tag @project.image.url, class: 'fh5co-portfolio-figure thumbnail col-lg-12' %>
      <% end %>
    </div>
    <br>
    <div class="text-center">
      <%= f.submit class: 'btn btn-primary btn-lg' %>
      <%= link_to 'Back', admin_projects_path, class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>
</div>
