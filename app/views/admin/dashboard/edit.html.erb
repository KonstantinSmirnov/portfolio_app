<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">There is webpage content</div>
      <div class="panel-body">
      <%= form_for [:admin, @content], url: admin_dashboard_path do |f| %>
        <h3>Header</h3>
        <div class="form-group">
          <%= f.label :logo_icon %>
          <%= f.text_field :logo_icon, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :logo_text %>
          <%= f.text_field :logo_text, class: 'form-control' %>
        </div>
        <hr>
        <h3>Index page</h3>
        <div class="form-group">
          <%= f.label :header %>
          <%= f.text_field :header, class: 'form-control', required: true %>
        </div>
        <div class="form-group">
          <%= f.label :subheader %>
          <%= f.text_field :subheader, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :text %>
          <%= f.text_area :text, class: 'form-control', required: true, rows: 5 %>
        </div>
        <hr>
        <h3>Projects page</h3>
        <div class="form-group">
          <%= f.label :projects_title %>
          <%= f.text_field :projects_title, class: 'form-control', required:true %>
        </div>
        <div class="form-group">
          <%= f.label :projects_text %>
          <%= f.text_area :projects_text, class: 'form-control', rows: 5 %>
        </div>
        <hr>
        <h3>Contact page</h3>
        <div class="form-group">
          <%= f.label :linkedin_link %>
          <%= f.text_field :linkedin_link, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :contact_text %>
          <%= f.text_area :contact_text, class: 'form-control', rows: 5 %>
        </div>
        <hr>
        <h3>Meta data index page</h3>
        <div class="form-group">
          <%= f.label :index_description %>
          <%= f.text_area :index_description, class: 'form-control', rows: 5 %>
        </div>
        <div class="form-group">
          <%= f.label :index_keywords %>
          <%= f.text_area :index_keywords, class: 'form-control', rows: 5 %>
        </div>
        <h3>Meta data projects page</h3>
        <div class="form-group">
          <%= f.label :projects_description %>
          <%= f.text_area :projects_description, class: 'form-control', rows: 5 %>
        </div>
        <div class="form-group">
          <%= f.label :projects_keywords %>
          <%= f.text_area :projects_keywords, class: 'form-control', rows: 5 %>
        </div>
        <div class="text-center">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>

      </div>
    </div>
  </div>
</div>
