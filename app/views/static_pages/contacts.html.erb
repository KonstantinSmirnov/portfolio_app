<div class="">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h1 class="intro-lead text-center">Send me a message:</h1>
        <%= form_tag '#', method: :post do %>
          <div class="form-group">
            <%= label_tag :name %>
            <%= text_field_tag :name, nil, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= label_tag :email %>
            <%= email_field_tag :email, nil, class: 'form-control', required: true %>
          </div>
          <div class="form-group">
            <%= label_tag :message %>
            <%= text_area_tag :message, nil, class: 'form-control', required: true %>
          </div>
          <br>
          <div class="text-center">
            <%= submit_tag 'Send', class: 'btn btn-primary btn-lg' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
