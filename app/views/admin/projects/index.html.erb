<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel panel-body">
        <%= link_to 'Add Project', new_admin_project_path, class: 'btn btn-default btn-sm' %>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th>Link</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          <% @projects.each do |project| %>
            <tr>
              <td><%= project.title %></td>
              <td><%= project.description %></td>
              <td><%= project.link %></td>
              <td><%= link_to("Edit", edit_admin_project_path(project)) %>
                  <%= link_to("Delete", admin_project_path(project), method: :delete, data: { confirm: "Are you sure?" } ) %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
